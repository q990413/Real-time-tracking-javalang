<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER_LEFT" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.cab302groupproject.controller.NotificationController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Button fx:id="NotificationBackButton" text="Back" onAction="#onNotificationBackButton"/>

    <TextArea fx:id="notificationWords"
              wrapText="true"
    />

    <TextField fx:id="secondsField" promptText="Seconds" alignment="CENTER"/>
    <TextField fx:id="minutesField" promptText="Minutes" alignment="CENTER"/>
    <TextField fx:id="hoursField" promptText="Hours" alignment="CENTER"/>

    <VBox alignment="CENTER" spacing="10">
        <Button text="POPUP" onAction="#onPopupButtonClick"/>
    </VBox>
</VBox>
